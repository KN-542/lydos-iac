# AWS設定
AWS_ACCOUNT_ID=000 ## 適切な値を.envには入れてください
AWS_REGION=ap-northeast-1

# ドメイン設定
DOMAIN_NAME=lydos.click
# サブドメイン（例: www, app など。ルートドメインのみの場合は空欄）
SUBDOMAIN=www
# Route53 ホストゾーン ID（AWS コンソール > Route53 > ホストゾーン で確認）
HOSTED_ZONE_ID=

# GitHub設定
GITHUB_OWNER=KN-542
GITHUB_REPO=lydos-view
GITHUB_BRANCH=main
# AWS Secrets Managerに保存されているGitHub Tokenのシークレット名
GITHUB_TOKEN_SECRET_NAME=github-token

# Amplify設定
AMPLIFY_APP_NAME=lydos-view

# 環境
ENVIRONMENT=production

RDS_DATABASE_NAME=lydos
BASTION_KEY_PAIR_NAME=lydos-bastion

# API設定
API_SUBDOMAIN=api
API_TASK_CPU=256
API_TASK_MEMORY=512

# API CI/CD設定
API_GITHUB_OWNER=KN-542
API_GITHUB_REPO=lydos-api
API_GITHUB_BRANCH=main

# Secrets Manager (API)
CLERK_SECRET_KEY=sk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
GEMINI_API_KEY=
GROQ_API_KEY=

# Amplify 環境変数 (lydos-view)
VITE_CLERK_PUBLISHABLE_KEY=pk_test_xxx
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
